---
import { Picture } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  path: string;
}

const { path } = Astro.props;
const files = Object.values<{
  default: ImageMetadata;
}>(import.meta.glob("../assets/*/**.jpg", { eager: true }));

// Determine size based on image dimensions
const getImageSize = (image: ImageMetadata) => {
  const ratio = image.width / image.height;

  if (ratio > 1.7) return "horizontal";
  if (ratio < 0.7) return "vertical";
  if (ratio >= 0.95 && ratio <= 1.05) return "large";
  return "medium";
};
---

<div class="masonry-grid">
  {
    files.map((file) => (
      <div class={`masonry-item ${getImageSize(file.default)}`}>
        <Picture
          src={file.default as ImageMetadata}
          formats={["avif", "webp"]}
          alt=""
          class="image"
          loading="lazy"
          widths={[400, 800, 1200]}
        />
      </div>
    ))
  }
</div>

<style>
  .masonry-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    padding: 1.5rem;
  }

  .masonry-item {
    position: relative;
    border-radius: 4px;
    overflow: hidden;
  }

  /* Size variations */
  .masonry-item.medium {
    grid-column: span 1;
  }

  .masonry-item.large {
    grid-column: span 2;
    grid-row: span 2;
  }

  .masonry-item.vertical {
    grid-row: span 2;
    grid-column: span 1;
  }

  .masonry-item.horizontal {
    grid-column: span 2;
  }

  .masonry-item :global(img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 4px;
    transition: opacity 0.3s ease-in-out;
  }

  .masonry-item :global(img.astro-image-loading) {
    opacity: 0;
  }

  @media (max-width: 1200px) {
    .masonry-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .masonry-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
      padding: 1rem;
    }

    .masonry-item.medium,
    .masonry-item.large,
    .masonry-item.horizontal {
      grid-column: span 1;
    }
  }
</style>
